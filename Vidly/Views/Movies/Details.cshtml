@model Vidly.Models.Movie
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genero: @Model.Genre.Name</li>
    <li>Día de Retirada: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Día de entrega: @Model.DateAdded.ToLongDateString()</li>
    <li>Numero en el Stock: @Model.NumberInStock</li>
</ul>

